<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Epedra"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/Epapel"
        android:layout_alignRight="@+id/EPc"
        android:layout_alignEnd="@+id/EPc" />

    <ImageView
        android:id="@+id/Epapel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/Etesoura"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/Epapel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff000000"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JO KEN PO"
        android:textSize="18pt"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Epapel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Partida"
        android:textSize="18pt" />

    <ImageView
        android:id="@+id/Ejogador"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/textViewVencedor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/EPc"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Etesoura"
        android:layout_alignRight="@+id/Etesoura"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="VocÃª"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Ejogador"
        android:layout_alignLeft="@+id/Epedra"
        android:layout_alignStart="@+id/Epedra"
        android:text="Computador"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/textViewVencedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/EPc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/EPc"
        android:layout_below="@+id/EPc"
        android:layout_marginTop="30dp"
        android:textSize="14pt"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="61dp"
        android:layout_alignTop="@+id/EPc"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff000000"
        android:id="@+id/imageView2"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
